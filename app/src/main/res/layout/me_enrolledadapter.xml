<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#00000000"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_middle"
        android:layout_marginRight="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/spacing_middle"
        android:visibility="visible"
        app:cardCornerRadius="3dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!--                    <com.mikhaellopez.circularimageview.CircularImageView-->
            <!--                        android:layout_width="80dp"-->
            <!--                        -->
            <!--                        android:layout_height="80dp"-->
            <!--                        android:layout_marginTop="8dp"-->
            <!--                        android:src="@drawable/photo_male_2"-->
            <!--                        app:civ_border="true"-->
            <!--                        app:civ_shadow="true"-->
            <!--                        app:civ_shadow_radius="0"-->
            <!--                        app:civ_border_color="@color/colorPrimary"-->
            <!--                        app:civ_border_width="1dp" />-->

            <TextView
                android:id="@+id/tvDisplayName"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:text="Adams Green"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                android:textColor="#fff"
                />

            <TextView
                android:id="@+id/tvHostId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HostIdddddd"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#fff"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLimit"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/muli_extralight"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:gravity="left|center_vertical"
                    android:singleLine="true"
                    android:text="Limit \n100">

                </TextView>


                <View
                    android:layout_width="@dimen/spacing_xlarge"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textColor="#fff"

                    android:textStyle="bold"
                    android:fontFamily="@font/muli_extralight"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:gravity="left|center_vertical"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:text="Address:-address is here">

                </TextView>

                <View
                    android:layout_width="@dimen/spacing_xlarge"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textColor="#fff"

                    android:textStyle="bold"
                    android:fontFamily="@font/muli_extralight"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:gravity="left|center_vertical"
                    android:text="Status:-On/Off">

                </TextView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="@dimen/spacing_middle"
                android:background="@color/grey_5" />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lnrUpdateLimit"
                    android:layout_weight="1"
                    android:background="@drawable/btn_rounded_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageButton
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_gravity="start|center_vertical"
                        android:background="@android:color/transparent"
                        android:tint="@color/colorPrimaryDark"
                        app:srcCompat="@drawable/ic_create" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli_extralight"
                        android:text="Update Limit"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:padding="5dp"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lnrNext"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_medium">


                    <TextView
                        android:visibility="visible"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="See joined users"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:textColor="@color/colorPrimaryDark" />
                    <ImageButton
                        android:id="@+id/btnNext2"
                        android:clickable="true"
                        android:layout_marginStart="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_rounded_red"
                        app:srcCompat="@drawable/ic_next" />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>