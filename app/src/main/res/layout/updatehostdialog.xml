<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lnrMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout

                        android:id="@+id/lnrUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="gone"
                        android:orientation="vertical">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="Enter HostId"
                            android:textColor="#000"
                            android:textSize="18sp" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <androidx.appcompat.widget.AppCompatImageView

                                android:layout_width="35dp"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:src="@drawable/logo"
                                android:tint="@color/colorPrimary" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/tvHostId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:layout_marginTop="2dp"
                                android:hint="Enter Hostid"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:textColor="#000"
                                android:textColorHint="@color/colorPrimaryDark" />
                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/lnrReferralCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text=" Update Limit"
                            android:textColor="#000"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <androidx.appcompat.widget.AppCompatImageView

                                android:layout_width="35dp"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:src="@drawable/logo"
                                android:tint="@color/colorPrimary" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/etLimit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:hint="Enter new limit"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:textColor="#000"
                                android:textColorHint="@color/colorPrimaryDark" />
                        </LinearLayout>



                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="Limit"
                        android:textColor="#000"
                        android:textSize="18sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lnrBirthDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:visibility="gone"

                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="Address"
                        android:textColor="#000"
                        android:textSize="18sp" />
                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        >

                        <androidx.appcompat.widget.AppCompatImageView

                            android:layout_width="35dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:src="@drawable/logo"
                            android:tint="@color/colorPrimary" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:layout_marginTop="2dp"
                            android:hint="Enter Address"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textColor="#000"
                            android:textColorHint="@color/colorPrimaryDark" />
                    </LinearLayout>

                    <!--                    <TextView-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:gravity="start"-->
                    <!--                        android:text="Number of Floors"-->
                    <!--                        android:textColor="@color/colorBlack"-->
                    <!--                        android:textSize="18sp" />-->

                    <!--                    <LinearLayout-->
                    <!--                        android:layout_width="match_parent"-->

                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:background="@drawable/border">-->

                    <!--                        <ImageView-->

                    <!--                            android:layout_width="35dp"-->
                    <!--                            android:layout_height="45dp"-->
                    <!--                            android:layout_gravity="center"-->
                    <!--                            android:layout_margin="5dp"-->
                    <!--                            android:src="@drawable/ic_floor"-->
                    <!--                            android:tint="@color/colorPrimary" />-->

                    <!--                        <EditText-->
                    <!--                            android:id="@+id/etNumberOfFloors"-->
                    <!--                            android:layout_width="match_parent"-->
                    <!--                            android:layout_height="wrap_content"-->
                    <!--                            android:layout_gravity="center"-->
                    <!--                            android:layout_margin="5dp"-->
                    <!--                            android:layout_marginTop="2dp"-->
                    <!--                            android:hint="Number Of Floors"-->
                    <!--                            android:padding="10dp"-->
                    <!--                            android:singleLine="true"-->
                    <!--                            android:textColor="@color/darkGrey"-->
                    <!--                            android:textColorHint="@color/darkGrey" />-->
                    <!--                    </LinearLayout>-->


                </LinearLayout>


                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/muli_extralight"
                    android:background="@color/colorPrimary"
                    android:text="U p d a t e"
                    android:textColor="#000"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorPrimary"
                    android:fontFamily="@font/muli_extralight"
                    android:text="C a n c e l"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:visibility="visible" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>



</RelativeLayout>